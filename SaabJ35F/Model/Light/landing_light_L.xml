<?xml version="1.0"?>
<PropertyList>

  <path>/Models/Effects/procedural_light.ac</path>

    <animation>
      <type>select</type>
      <object-name>procedural_light</object-name>
      <condition>
       <and>
         <property>/controls/lighting/landing-lightL</property>
         <equals>
           <property>/gear/gear[1]/position-norm</property>
           <value>1.0</value>
         </equals>
        </and>
      </condition>
    </animation>

 <animation>
    <type>noshadow</type>
    <object-name>procedural_light</object-name>
 </animation>
 
  <animation>
   <type>translate</type>
   <object-name>procedural_light</object-name>
  <property>gear/gear[1]/compression-ft</property>
  <interpolation>
     <entry><ind>0.0</ind><dep>0.0</dep></entry>
     <entry><ind>0.225</ind><dep>0.0</dep></entry>
     <entry><ind>0.5</ind><dep>0.084</dep></entry>
  </interpolation>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

    <effect>
        <inherits-from>Effects/draken-light-landing</inherits-from>
        <object-name>procedural_light</object-name>
    </effect>

<light>
      <name>LandingLightLeft</name>
      <type>spot</type>
      <position>
         <x-m>-0.1</x-m>
         <y-m>0</y-m>
         <z-m>0</z-m>
      </position>
      <direction>
         <x>-1.0</x>
         <y>-0.15</y>
         <z>-0.3</z>
      </direction>
      <ambient>
         <r>0.03</r>
         <g>0.03</g>
         <b>0.03</b>
         <a>1</a>
      </ambient>
      <diffuse>
         <r>0.75</r>
         <g>0.75</g>
         <b>0.8</b>
         <a>1</a>
      </diffuse>
      <specular>
         <r>0.75</r>
         <g>0.75</g>
         <b>0.8</b>
         <a>1</a>
      </specular>
      <attenuation>
         <c>0.0</c>
         <l>0.01</l>
         <q>0</q>
      </attenuation>
      <spot-exponent>40</spot-exponent>
      <spot-cutoff>25</spot-cutoff>
      <range-m>100</range-m>
      <dim-factor>
        <expression>
         <product>
           <property>controls/lighting/landing-lightL</property>
           <floor>
             <property>/gear/gear[1]/position-norm</property>
           </floor>
         </product>
        </expression>
      </dim-factor>
   </light>
   
</PropertyList>
