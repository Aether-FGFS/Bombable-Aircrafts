<?xml version="1.0"?>
<PropertyList>

 <path>compass-reserv.ac</path>

 <effect>
   <inherits-from>Effects/Glass/inst_glass</inherits-from>
   <object-name>Glass</object-name>
 </effect>
 
 <animation>
  <type>noshadow</type>
    <object-name>Glass</object-name>
 </animation>
 
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>
 
 <animation>
  <type>material</type> 
  <object-name>Scale</object-name>
  <condition>		
   <greater-than>		
    <property>/sim/time/sun-angle-rad</property>
    <value>1.57</value>
   </greater-than>
  </condition>
  <emission>	
   <red>0</red>	
   <green>1</green>	
   <blue>0.2</blue>
   <factor>0.05</factor>
  </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Scale</object-name>
  <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

<!-- Follow canopy movement -->

 <animation>
  <type>rotate</type>
  <property>/controls/canopy/position-norm</property>
  <factor>55</factor>
  <center>
   <x-m>1.1984</x-m>
   <y-m>0.28717</y-m>
   <z-m>0.41676</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>


  
  
</PropertyList>


