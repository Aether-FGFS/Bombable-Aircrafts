<?xml version="1.0"?>

<PropertyList>

 <path>draken_alt-meter.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>

 <animation>
  <type>material</type> 
  <object-name>Cube</object-name>
  <emission>	
   <red>0.15</red>	
   <green>0.03</green>	
   <blue>0.03</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
  
 <animation>
  <type>material</type> 
  <object-name>Hundred_meter_hand</object-name>
  <object-name>km_hand</object-name>
  <object-name>Dig1000</object-name>
  <object-name>Dig100</object-name>
  <object-name>Dig10</object-name>
  <object-name>Dig1</object-name>
  <object-name>Dig0.1</object-name>
  <object-name>Face</object-name>
  <emission>	
   <red>1</red>	
   <green>0.3</green>	
   <blue>0.3</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>Hundred_meter_hand</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>/instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>0.10944</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.00</y-m>
   <z-m>0.0139</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>km_hand</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>/instrumentation/altimeter/indicated-altitude-ft</property>
  <factor>0.010944</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.00</y-m>
   <z-m>0.0139</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

    <!-- Pressure Display -->
    <animation>
        <type>textranslate</type>
        <object-name>Dig1000</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig100</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig10</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig1</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig0.1</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>1</factor>
        <step>0.1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

  <!--             Altimeter setting       -->  

  <animation>
        <type>knob</type>
        <object-name>knob</object-name>
        <value>5.0</value>
        <center>
          <x-m>0.0</x-m>
          <y-m>-0.0396</y-m>
          <z-m>-0.0369</z-m>
        </center>
        <axis>
          <x>1</x>
          <y>0</y>
          <z>0</z>
        </axis>
        
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <factor>1</factor>
                <min>500</min>
                <max>1200</max>                
                <wrap>true</wrap>
            </binding>
        </action>
        
        <shift-action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <factor>0.1</factor>
            </binding>
        </shift-action>

    <hovered>
     <binding>
      <condition>
       <property>instrumentation/tooltip</property>
      </condition>
      <command>set-tooltip</command>
      <tooltip-id>altpress</tooltip-id>
      <label>Pressure: %5.1f hPa</label>
      <measure-text>Pressure: 1013.2 hPa</measure-text>
      <property>/instrumentation/altimeter/setting-hpa</property>
     </binding>
   </hovered>
   
    </animation>
    
</PropertyList>


