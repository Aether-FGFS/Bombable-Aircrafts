<?xml version="1.0"?>

<PropertyList>

 <path>altitude.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>

 <animation>
  <type>material</type> 
  <object-name>Face</object-name>
  <emission>	
   <red>0.15</red>	
   <green>0.03</green>	
   <blue>0.03</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>Needle100</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>/instrumentation/altimeter[1]/indicated-altitude-ft</property>
  <factor>0.10944</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle1000</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>/instrumentation/altimeter[1]/indicated-altitude-ft</property>
  <factor>0.010944</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.00</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

    <!-- Pressure Display -->
    <animation>
        <type>textranslate</type>
        <object-name>D1000</object-name>
        <property>/instrumentation/altimeter[1]/setting-hpa</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>D100</object-name>
        <property>/instrumentation/altimeter[1]/setting-hpa</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>D10</object-name>
        <property>/instrumentation/altimeter[1]/setting-hpa</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>D1</object-name>
        <property>/instrumentation/altimeter[1]/setting-hpa</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

  <!--             Altimeter setting       -->  

  <animation>
        <type>knob</type>
        <object-name>Knob</object-name>
        <value>5.0</value>
        <center>
          <x-m>0.0</x-m>
          <y-m>-0.025</y-m>
          <z-m>-0.025</z-m>
        </center>
        <axis>
          <x>1</x>
          <y>0</y>
          <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter[1]/setting-hpa</property>
                <factor>1</factor>
                <min>800</min>
                <max>1200</max>                
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    
</PropertyList>


