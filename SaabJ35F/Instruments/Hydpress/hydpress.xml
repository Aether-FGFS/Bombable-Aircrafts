<?xml version="1.0"?>
<PropertyList>
  <path>hydpress.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>
 
<animation>
 <type>material</type> 
 <object-name>Face</object-name>
 <object-name>Needle</object-name>
 <emission>	
  <red>1</red>	
  <green>0.3</green>	
  <blue>0.3</blue>
  <factor-prop>controls/lighting/instruments-norm</factor-prop>
 </emission>
</animation>

<animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>fdm/jsbsim/systems/hydraulic/hydI-sys-p</property>
  <interpolation>
  	<entry><ind>0.0</ind><dep>0</dep></entry>
  	<entry><ind>4071</ind><dep>304</dep></entry> <!-- 3000 psi = 210 kpcm2 -->
  </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
</animation>

</PropertyList>
